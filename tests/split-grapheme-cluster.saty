    ]
  in
  let s2 =
    [
      [0x1F1EF, 0x1F1F5],
      [0x30AC],
      [0x30AC],
      [0x1F468, 0x200D, 0x1F469, 0x200D, 0x1F466],
      [0x1F469, 0x200D, 0x1F469, 0x200D, 0x1F467, 0x200D, 0x1F467],
