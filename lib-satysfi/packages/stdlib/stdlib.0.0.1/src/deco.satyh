use Gr
use Path

module Deco :> sig
  val empty : deco
  val simple-frame : length -> color -> color -> deco
end = struct

  val empty _ _ _ _ =
    unite-graphics []

  val simple-frame t scolor fcolor (x, y) w h d =
    let path = Path.rectangle (x, y -' d) (x +' w, y +' h) in
    unite-graphics [
      fill fcolor path,
      stroke t scolor path,
    ]

end
