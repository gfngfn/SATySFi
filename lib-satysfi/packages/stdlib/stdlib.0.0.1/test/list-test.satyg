use package Testing
use List

module ListTest = struct

  module IntTarget = struct
    type t = int
    val equal m n = (m == n)
    val show = arabic
  end
  module IntEquality = Testing.Equality.Make IntTarget

  #[test]
  val fold-test () =
    let input = [3, 1, 4, 1, 5, 9, 2] in
    let expected = 25 in
    let got = List.fold ( + ) 0 input in
    IntEquality.assert-equal expected got

  % TODO: add more tests

end
