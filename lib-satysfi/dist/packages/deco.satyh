@require: gr

module Deco :> sig
  val empty : deco
  val simple-frame : length -> color -> color -> deco
end = struct

  val empty _ _ _ _ = []

  val simple-frame t scolor fcolor (x, y) w h d =
    let path = Gr.rectangle (x, y -' d) (x +' w, y +' h) in
      [
        fill fcolor path,
        stroke t scolor path,
      ]

end
